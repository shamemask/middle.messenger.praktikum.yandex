{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "checkTypes": "npm run typecheck && npm run fixStyles && npm run fixEslint",
    "fixEslint": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "fixStyles": "stylelint **/*.scss --fix",
    "build": "vite build",
    "test": "mocha --config=./.mocharc.json -n import=./mochaloader.js **/*.test.ts",
    "start": "npm run test && vite build && vite preview --port 3000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run checkTypes && npm run test"
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@babel/register": "^7.24.6",
    "@eslint/js": "^9.10.0",
    "@tsconfig/recommended": "^1.0.7",
    "@types/chai": "^4.3.19",
    "@types/mocha": "^10.0.7",
    "@types/uuid": "^10.0.0",
    "chai": "^5.1.1",
    "eslint": "^9.8.0",
    "husky": "^9.1.5",
    "ignore-styles": "^5.0.1",
    "jsdom": "^25.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "sass": "^1.77.6",
    "stylelint": "^16.8.1",
    "stylelint-config-rational-order": "^0.0.4",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "uuid": "^10.0.0",
    "vite": "^5.3.1",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "vite-plugin-html": "^3.2.2"
  },
  "engines": {
    "node": ">=12"
  }
}
